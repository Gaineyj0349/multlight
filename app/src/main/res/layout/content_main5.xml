<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gainwise.multlight.Main5Activity"
    tools:showIn="@layout/activity_main5">


    <LinearLayout
        android:id="@+id/layoutttt"
        android:layout_above="@id/adView22"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/flash_light"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="dummyClick"
            android:background="@drawable/custom_ripple_borderless"
            android:padding="20dp"
            android:textAlignment="center"
            android:text="Toggle Flashlight"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <View
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/flash_light2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="dummyClick"
            android:background="@drawable/custom_ripple_borderless"
            android:padding="20dp"
            android:text="Swipe single color"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textAlignment="center"/>
        <View
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/flash_light3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="dummyClick"
            android:padding="20dp"
            android:textAlignment="center"
            android:background="@drawable/custom_ripple_borderless"
            android:text="Carousel all colors"
            android:textColor="#ffffff"
            android:textSize="30sp"/>
        <View
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/flash_light4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="dummyClick"
            android:padding="20dp"
            android:textAlignment="center"
            android:background="@drawable/custom_ripple_borderless"
            android:text="Carousel custom colors"
            android:textColor="#ffffff"
            android:textSize="30sp"/>
    </LinearLayout>

    <com.google.android.gms.ads.AdView

        xmlns:ads="http://schemas.android.com/apk/res-auto"

        android:id="@+id/adView22"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6280186717837639/9979581352"

        />


</RelativeLayout>
